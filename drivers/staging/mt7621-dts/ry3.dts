&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "wdt", "rgmii2";
			ralink,function = "gpio";
		};
	};
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
		};
		port@2 {
			status = "okay";
		};
		port@4 {
			status = "okay";
		};
	};
};

